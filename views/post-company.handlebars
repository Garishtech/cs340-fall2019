<h1>Post Company</h1>

<form id="add post_company" action="/post-company" method="post">
	<label>Company Name: </label> <input type="text" placeholder="Name" name="name">
	<button type="submit">Add</button>
</form>

<h3>Current Post Companies:</h3>

<table>
	<thead>
		<th>Name</th>
		<th>ID</th>
	</thead>
	<tbody>
		{{#each pc}}
		<tr>
			<td>{{name}}</td>
			<td>{{post_company_id}}</td>
			<td><button onclick="delete_post_company({{post_company_id}})">Delete</button></td>
		</tr>
		{{/each}}
	</tbody>
</table>

