<h1>Update {{results.model}}:</h1>
<form id="update-phone" action="/phone" methond="post">
    Model:            <input type="text"   name="model" value="{{results.model}}"><br>
    Screen Size:      <input type="number" name="screen_size" value="{{results.screen_size}}"><br>
    Internal Storage: <input type="number" name="in_storage" value="{{results.in_storage}}"><br>
    External Storage: <input type="number" name="ex_storage" value="{{results.ex_storage}}"><br>
    Manufacturer:     <select name="manufacturer">
        {{#each man}}
        <option value="{{id}}">{{name}}</option>
        {{/each}}
    </select><a href="/manufacturer"> New</a><br>
</form>

<button onclick="updatePhone({{results.id}})">Update</button>
