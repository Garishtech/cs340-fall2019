<h1>Package</h1>

<h3>Search for a Package</h3>
<div class="wrap">
	<div class="search">
		<input type"text" class="searchTerm" placeholder="Search/Filter">
		<button type="submit" class="searchButton">Go</button>
	</div>
</div>

<h3>Add a Package</h3>
<form id="add package" action="/package" method="post">
	<label>Contents: </label> <input type="text" placeholder="Contents" name="content">
	<label>Delivery Status:</label>
	<select>
		<option value="delivered">Delivery Status</option>
		<option value ="true">Delivered</option>
		<option value ="false">En Route</option>
	</select>
	<button type="submit">Add</button>
</form>

<h3>Current Packages:</h3>
<table>
	<thead>
		<th>Contents</th>
		<th>Delivery Status</th>
		<th>Package ID</th>
	</thead>
	<tbody>
		{{#each packages}}
		<tr>
			<td>{{content}}</td>
			<td>{{delivered}}</td>
			<td>{{id}}</td>
			<td><button onclick=delete_package({{id}})>Delete</button></td>
			<td><button>Edit</button></td>
		</tr>
		{{/each}}
	</tbody>
</table>



