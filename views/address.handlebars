<h1>Address</h1>

<h3>Add an Address</h3>
<form id="Add Address" action="/address" method="post">
	<label>House Number: </label> <input type="text" placeholder="House Number" name="house_number">
	<label>Street Address: </label> <input type="text" placeholder="Street Address" name="street">
	<label>City: </label> <input type="text" placeholder="City" name="city">
	<label>State: </label> <input type="text" placeholder="State" name="state">
	<label>Zip Code: </label> <input type="text" placeholder="Zip Code" name="zip_code">

	<button type="submit">Add</button>
</form>

<h3>Available Addresses</h3>
<table>
	<thead>
		<th>House Number</th>
		<th>Street Address</th>
		<th>City</th>
		<th>State</th>
		<th>Zip Code</th>
		<th>ID</th>
	</thead>
	<tbody>
		{{#each address}}
			<tr>
				<td>{{house_number}}</td>
				<td>{{street}}</td>
				<td>{{city}}</td>
				<td>{{state}}</td>
				<td>{{zip_code}}</td>
				<td>{{address_id}}</td>
				<td><button onclick=delete_address({{address_id}})>Delete</button></td>
				<td><button>Edit</button></td>
			</tr>
		{{/each}}
	</tbody>
</table>
